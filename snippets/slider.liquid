        full-width--{{ block.settings.wide_display_1 }}"
        data-slider-id="homepage_slider-{{section.id}}"
        data-slideshow-speed="{% if block.settings.slideshow_speed_1 %}{{block.settings.slideshow_speed_1}}{% else %}{{block.settings.slideshow_speed}}{% endif %}"
