  {% endfor %}
</style>

<script>
  $(document).ready(function(){
      {% for t in product.tags %}
              {% if t == "dropdown" %}
                  $(document).ready(function(){
                      $("#product-select-4384313835607productproduct-template").hide()
                      $("#product-select-6815228359productproduct-template").hide()
                      $("#product-select-4405113782359productproduct-template").hide() 
                      $(".selector-wrapper").show()
                      $(".select").show()
                  });
              {% endif %}
        {% endfor %}
  })
</script>

